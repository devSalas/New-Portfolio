<style>
/* -------esto va abajo ------ */

.Acerca-message{
  display: flex;
  justify-content: center;
  flex-direction: column;
}
/* ------------- */

.boxImage{
 display: none;
}

.links-description{
  display:flex;
  justify-content:center;
  align-items: center;
}
.link-description{
/* width:40px; */
margin:5px
}

  :root{
  --c-pry :  #090909;
  --c-pry-a : #090909;
  --c-sec :#ed2243;
  --c-sec-b:#ed2243;
  --c-third:#ffffff;
}
.shadow1{
  position: absolute;
  bottom:0%;
  left: 10%;
  width: 2px;
  height: 2px;
  background-color:  #ca192b;
  border-radius: 100%;
  box-shadow: 0px 0px 100px 100px #7b0d18;
}
.shadow2{
  position: absolute;
  top:30%;
  right: -4%;
  width: 2px;
  height: 2px;
  background-color:  #95464e;
  border-radius: 100%;
  box-shadow: 0px 0px 100px 100px #7b0d18;
}
.containerAcerca{
  
  background:url("/bg-masthead.jpg");
  background-size: cover;
  position: relative;
  background-color:rgba(14, 13, 13, 0.694);
  background-blend-mode: darken;
  background-position: center;
  width: 100%;
  display: grid;
  grid-template-rows: 60px 1fr; 
  height: 100vh;
  overflow: hidden;

  

}

.box-img{
  width: 150px;
  height: 150px;
  border-radius: 1000px;
  background-color: blue;
  overflow: hidden;
  margin: 20px auto ;
}
.btn-main{
  display: block;
  background-color: var(--c-sec);
  padding:0;
  border:none;
  margin: 20px auto;
  cursor: pointer;
}
.btn-main a{
  padding: 10px 20px;
  font-size: 20px;
}



.btn-main:hover{
  box-shadow: 0 0 25px var(--c-sec);
}



  .btn-main a{
    color:var(--c-third);
    text-decoration: none;
    display: grid;
    place-items: center;
    height: 100%;
  }
  .main-description{
    padding: 10px 30px;
    margin-top: 8px;
    
  }
  .description-p{
    text-align: center;
    max-width:500px;
    margin: auto;
    line-height:1.5rem;
    opacity: .7;
  }

  h1{
    font-size: 1.5rem;
    text-align: center;
    place-self: center;
    letter-spacing: -.06em;
    

    
  }
 
  

  .span{
    display: block;
    
  }
  

  .span-dev{
    font-size: 32px;
    color:var(--c-sec)
  }

  .links-description .link-description{
    color:white;
   opacity: .6;
   transform: scale(1);
  transition: transform 0.3s ease;
   
  }

  .link-description:hover{
  transform: scale(1.3);
  animation: none;
}

@keyframes run-link {
  from {
    transform: scale(1);
  }
  to {
    transform: scale(1.1);
  }
}



  @media  (min-width:1024px) {

    h1{
    font-size: 2rem;
    text-align: center;
    place-self: center;
    font-weight: 700;
    letter-spacing: -.06em;
    
    }

    .boxImage{
    display: block;
    align-self: center;
    justify-self: center;
    min-width: 50%;
    max-width:70%;
    border-bottom: 5px solid #ca192b;
    border-radius: 10px;
    }
    .boxImage img{
      width:100%;
    }
    .box-img{
      display: none;
    }

    .containerAcerca{
      grid-template-rows: 60px 1fr; 
    }
    .containerTodo{

    display: grid;
    grid-template-columns:100%;
    box-sizing: border-box;
    height: 100vh;
    overflow: hidden;
    }
    

    .btn-main{
      display: block;
      background-color: var(--c-sec);
      padding:0;
      border:none;
      margin: 20px auto;
      cursor: pointer;
      border-radius:2px;
    }
    .btn-main a{
      padding: 10px 40px;
      font-size: 20px;
    }

    .span-dev{
    font-size: 45px;
    color:var(--c-sec);
    font-weight: 600;
    }
    .span-name{
    font-size: 35px;
    font-weight: 100;
    }
  }
</style>